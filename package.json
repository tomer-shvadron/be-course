{
  "name": "be-course",
  "version": "1.0.0",
  "description": "BE Course Repository",
  "scripts": {
    "dev:api": "tsx watch src/api/api.ts",
    "dev:lb": "tsx watch src/load-balancer/index.ts",
    "dev:users": "tsx watch src/users/api.ts",
    "start:api": "tsx src/api/api.ts",
    "start:lb": "tsx src/load-balancer/index.ts",
    "start:users": "tsx src/users/api.ts",
    "start:db": "docker compose -f src/users/docker-compose.yml up -d",
    "stop:db": "docker compose -f src/users/docker-compose.yml down",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "keywords": [],
  "author": "Tomer Shvadron",
  "type": "module",
  "dependencies": {
    "@fastify/type-provider-typebox": "^5.1.0",
    "@sinclair/typebox": "^0.34.33",
    "axios": "^1.9.0",
    "fastify": "^5.3.3",
    "getmac": "^6.6.0",
    "logzio-nodejs": "^2.5.0",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "piscina": "^5.0.0",
    "readline": "^1.3.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3"
  }
}
